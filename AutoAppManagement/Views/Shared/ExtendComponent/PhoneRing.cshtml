@*
    Phone Ring Component - Hiển thị thông báo cuộc gọi
*@

<div id="phone-ring-component" class="phone-ring-container" style="display: none;">
    <div class="phone-ring-overlay">
        <div class="phone-ring-modal">
            <div class="phone-ring-header">
                <h4><i class="mdi mdi-phone-ring"></i> Cuộc gọi đến</h4>
                <button type="button" class="btn-close" onclick="hidePhoneRing()"></button>
            </div>
            <div class="phone-ring-body">
                <div class="caller-info">
                    <div class="caller-avatar">
                        <img id="caller-avatar" src="/assets/images/faces/face1.jpg" alt="Caller" />
                    </div>
                    <div class="caller-details">
                        <h5 id="caller-name">Tên người gọi</h5>
                        <p id="caller-phone">+84 xxx xxx xxx</p>
                        <p id="call-status" class="text-muted">Đang gọi...</p>
                    </div>
                </div>
            </div>
            <div class="phone-ring-actions">
                <button type="button" class="btn btn-success btn-answer" onclick="answerCall()">
                    <i class="mdi mdi-phone"></i> Trả lời
                </button>
                <button type="button" class="btn btn-danger btn-decline" onclick="declineCall()">
                    <i class="mdi mdi-phone-hangup"></i> Từ chối
                </button>
            </div>
        </div>
    </div>
</div>

<style>
.phone-ring-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
}

.phone-ring-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
}

.phone-ring-modal {
    background: white;
    border-radius: 15px;
    padding: 20px;
    max-width: 400px;
    width: 90%;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    animation: phoneRingPulse 1s infinite;
}

.phone-ring-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    border-bottom: 1px solid #eee;
    padding-bottom: 10px;
}

.phone-ring-header h4 {
    margin: 0;
    color: #333;
}

.btn-close {
    background: none;
    border: none;
    font-size: 20px;
    cursor: pointer;
    color: #999;
}

.caller-info {
    text-align: center;
    margin-bottom: 20px;
}

.caller-avatar {
    margin-bottom: 15px;
}

.caller-avatar img {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #28a745;
}

.caller-details h5 {
    margin: 10px 0 5px 0;
    color: #333;
}

.caller-details p {
    margin: 5px 0;
    color: #666;
}

.phone-ring-actions {
    display: flex;
    justify-content: space-around;
    gap: 15px;
}

.btn-answer, .btn-decline {
    flex: 1;
    padding: 12px 20px;
    border: none;
    border-radius: 25px;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn-answer {
    background: #28a745;
    color: white;
}

.btn-answer:hover {
    background: #218838;
    transform: scale(1.05);
}

.btn-decline {
    background: #dc3545;
    color: white;
}

.btn-decline:hover {
    background: #c82333;
    transform: scale(1.05);
}

@keyframes phoneRingPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.02); }
}

.phone-ring-modal.ringing {
    animation: phoneRingShake 0.5s infinite;
}

@keyframes phoneRingShake {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-2px); }
    75% { transform: translateX(2px); }
}
</style>

<script>
// Phone Ring Functions
function showPhoneRing(callerName, callerPhone, callerAvatar) {
    document.getElementById('caller-name').textContent = callerName || 'Người gọi';
    document.getElementById('caller-phone').textContent = callerPhone || '+84 xxx xxx xxx';
    
    if (callerAvatar) {
        document.getElementById('caller-avatar').src = callerAvatar;
    }
    
    document.getElementById('phone-ring-component').style.display = 'block';
    document.querySelector('.phone-ring-modal').classList.add('ringing');
    
    // Play ring sound if available
    playRingSound();
}

function hidePhoneRing() {
    document.getElementById('phone-ring-component').style.display = 'none';
    document.querySelector('.phone-ring-modal').classList.remove('ringing');
    stopRingSound();
}

function answerCall() {
    document.getElementById('call-status').textContent = 'Đã kết nối';
    document.getElementById('call-status').className = 'text-success';
    
    // Hide after 2 seconds
    setTimeout(() => {
        hidePhoneRing();
    }, 2000);
    
    // Handle answer call logic here
    console.log('Call answered');
}

function declineCall() {
    document.getElementById('call-status').textContent = 'Đã từ chối';
    document.getElementById('call-status').className = 'text-danger';
    
    // Hide after 1 second
    setTimeout(() => {
        hidePhoneRing();
    }, 1000);
    
    // Handle decline call logic here
    console.log('Call declined');
}

function playRingSound() {
    // Add ring sound logic here if needed
    console.log('Playing ring sound...');
}

function stopRingSound() {
    // Add stop ring sound logic here if needed
    console.log('Stopping ring sound...');
}

// Example usage:
// showPhoneRing('Nguyễn Văn A', '+84 901 234 567', '/assets/images/faces/face2.jpg');
</script>
